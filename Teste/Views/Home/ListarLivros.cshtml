@model IEnumerable<Teste.Models.Livro>

@{
    ViewBag.Title = "ListarLivros";
}

<h2>ListarLivros</h2>

<form asp-controller="Home" asp-action="Pesquisar">
    <p>
        Título: <input type="text" name="SearchString">   
        <input type="submit" value="Pesquisar" />
    </p>
</form>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Autor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Alugado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Autor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Alugado)
        </td>
        <td>
            @Html.ActionLink("Detalhes", "Detalhes", new { id=item.Id }) |
            @Html.ActionLink("Alugar", "Alugar", new { id=item.Id }) |
            @Html.ActionLink("Liberar", "Liberar", new { id=item.Id })
        </td>
    </tr>
}

</table>
